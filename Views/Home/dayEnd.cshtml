
@{
    ViewData["Title"] = "dayEnd";
}

<div class="text-center">
    <h3 class="display-4">Fin del Día</h3>
    <hr />
    <p class="text-center">A continuación encontrará </p>

    <form asp-action="dayEnd">
        <div class="form-group">
            <input type="submit" value="Siguiente Día" class="btn btn-primary" />
        </div>
    </form>
    <form asp-action="simEnd">
        <div class="form-group">
            <input type="submit" value="Finalizar Simulación" class="btn btn-danger" />
        </div>
    </form>
</div>

