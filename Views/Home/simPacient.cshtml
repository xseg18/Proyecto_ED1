<form asp-action="vaccinatePacient">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Observations" class="control-label"></label>
        <input asp-for="Observations" class="form-control" />
        <span asp-validation-for="Observations" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Vacunar" class="btn btn-primary" />
    </div>
</form>

<form asp-action="reassignPacient">
    <div class="form-group">
        <input type="submit" value="Reagendar" class="btn btn-danger" />
    </div>
</form>

